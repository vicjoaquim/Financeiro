@model Parte_do_financeiro.Models.Financeiro
@{
    ViewData["Title"] = "Criar Conta";
}

<h2>Criar Conta</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ContratoId" class="form-label">Contrato</label>
        <select asp-for="ContratoId" class="form-select" asp-items="@(new SelectList(ViewBag.Contratos, "Id", "Nome"))"></select>
    </div>
    <div class="mb-3">
        <label asp-for="ValorTotal" class="form-label"></label>
        <input asp-for="ValorTotal" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DataPagamento" class="form-label"></label>
        <input asp-for="DataPagamento" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="StatusPagamento" class="form-label"></label>
        <select asp-for="StatusPagamento" class="form-select">
            <option>Pendente</option>
            <option>Pago</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
